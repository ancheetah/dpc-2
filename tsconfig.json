{
   "compilerOptions": {
      "baseUrl": ".",
      "target": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "paths": {
         "@lib/*": ["lib/*"],
         "@global/*": ["src/_global/*"],
         "@assets/*": ["src/assets/*"],
         "@components/*": ["src/components/*"],
         "@config/*": ["config/*"]
      }
   },
   "include": ["src", "next-env.d.ts", "**/*.ts", "**/*.tsx", "netlify/functions/deploy-building.js", "plugin.ts"],
   "exclude": ["node_modules"]
}
